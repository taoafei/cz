.post-container{
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
  padding: 10px;
}

.post-author-date{
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-date{
  margin-left: 20rpx;
  vertical-align: middle;
  font-size: 26rpx;
  margin-bottom: 5px;
}

.post-title{
  font-size: 32rpx;
  color: #14237B;
  padding:30rpx 20rpx 22rpx;
  display: block;
  background-color: #fff;
  text-align: center;

}

.post-img{
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
  border: 1px solid #ccc;
}

.post-content{
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
  color:#333;
  font-weight:bold;
}

.post-like{
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 20rpx;
}

.post-like-image{
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.post-like-font{
  vertical-align: middle;
  margin-right: 5px;
}
